# EditorConfig: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{htaccess,html,scss,js,json,xml,yml}]
indent_size = 2

[*.php]
max_line_length = 100

[Dockerfile]
max_line_length = 80

[Makefile]
indent_style = tab
